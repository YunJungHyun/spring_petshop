<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.spring.ps.mapper.productMapper">


	<insert id="productBaseInsert" parameterType="productVO" >

 		<![CDATA[
 				INSERT INTO product(pname, pcnt,pprice,pcnum) VALUES(
 					
 					#{pname},#{pcnt},#{pprice},#{pcnum}
 					
 			
 				
 				)
 				
 		
	
		]]>
		
		<selectKey resultType="int" keyProperty="pnum" order="AFTER">
					<![CDATA[
						SELECT LAST_INSERT_ID() as pnum
					]]>
		</selectKey>
		
	</insert>
	<update id="productSlideImgUpload"  >

 		<![CDATA[ 
 			${sql}
		]]>
		
		
	</update>
	
	<select id="productList" parameterType="HashMap" resultType="productVO"> 
		<![CDATA[
 			${sql}
		]]>
	
	</select>





</mapper>